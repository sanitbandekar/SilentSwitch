<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SilentSwitch" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.SilentSwitch" parent="Base.Theme.SilentSwitch" />

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Chip background color selector -->
        <item name="chipBackgroundColor">@color/bg_chips</item>
        <!-- Border color -->
        <item name="chipStrokeColor">@color/bg_chips</item>

        <!-- Chip text color selector -->
        <item name="android:textColor">@color/white</item>
        <!-- Chip close icon color selector -->
        <item name="closeIconTint">@color/white</item>
    </style>
</resources>